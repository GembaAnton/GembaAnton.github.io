    <script>
        // JSON data converted from your Excel file
        const grammarData = [
            { "construction": "…ものなら", "level": "N2" },
            { "construction": "…はまだしも", "level": "N2" }
            // You can add more grammatical constructions from your database here
        ];

        // Function to get a random grammatical construction and level
        function getRandomGrammar() {
            const randomIndex = Math.floor(Math.random() * grammarData.length);
            const randomGrammar = grammarData[randomIndex];
            return randomGrammar;
        }

        // Set random grammar and level on page load
        window.onload = function() {
            const randomGrammar = getRandomGrammar();
            document.getElementById('grammarBox').innerText = randomGrammar.construction;
            document.getElementById('levelBox').innerText = randomGrammar.level;
        };
    </script>
