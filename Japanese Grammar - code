    <div class="container">
        <div class="grammar-box" id="grammarBox">
            <!-- Randomly chosen grammatical construction will be shown here -->
        </div>
        <div class="level-label">Level</div>
        <div class="level-box" id="levelBox">
            <!-- Proficiency level will be shown here -->
